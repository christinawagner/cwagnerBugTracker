@model IEnumerable<cwagnerBugTracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<div class="card">
    <div class="card-body">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>

        @Html.Action("ListTicketsPartial", new { tickets = Model })

    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#ticketsTable').DataTable({
                responsive: true
            });
        });
    </script>
}
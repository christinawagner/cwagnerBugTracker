@model cwagnerBugTracker.Helpers.ProjectUserViewModel

@{
    ViewBag.Title = "Edit Project Users";
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Project Details</h4>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.AssignProject.Title)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AssignProject.Title)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.AssignProject.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AssignProject.Description)
                    </dd>
                </dl>
                <div>
                    @Html.ActionLink("Back to All Projects", "ProjectList")
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(model => model.AssignProject.Id)
                    @Html.AntiForgeryToken()

                    @Html.ListBox("SelectedUsers", Model.Users, new { @class = "multi-select" })
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success waves-effect waves-light m-r-10">Assign Users</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/assets/multiselect/multiselect.js"></script>
    <script type="text/javascript">
        $(function () {
            "use strict";
            $('.multi-select').multiSelect({
                selectableHeader: "<div style='text-align: center; background-color: black; color: white'><strong>Available Users</strong></div>",
                selectionHeader: "<div style='text-align: center; background-color: black; color: white'><strong>Users on Project</strong></div>"
            });
            $(".ms-container").append('<i class="glyph-icon icon-exchange"></i>');

        });
    </script>
}